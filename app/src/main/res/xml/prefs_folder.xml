<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_folder_anim"
            android:title="@string/folder_anim" />

        <SeekBarPreference
            android:defaultValue="90"
            android:dependency="prefs_key_home_folder_anim"
            android:key="prefs_key_home_folder_anim_1"
            android:title="@string/folder_anim_1"
            app:format="%d / 100 f"
            app:maxValue="150"
            app:minValue="50"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="30"
            android:dependency="prefs_key_home_folder_anim"
            android:key="prefs_key_home_folder_anim_2"
            android:title="@string/folder_anim_2"
            app:format="%d / 100 f"
            app:maxValue="60"
            app:minValue="10"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="99"
            android:dependency="prefs_key_home_folder_anim"
            android:key="prefs_key_home_folder_anim_3"
            android:title="@string/folder_anim_3"
            app:format="%d / 100 f"
            app:maxValue="150"
            app:minValue="50"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="24"
            android:dependency="prefs_key_home_folder_anim"
            android:key="prefs_key_home_folder_anim_4"
            android:title="@string/folder_anim_4"
            app:format="%d / 100 f"
            app:maxValue="60"
            app:minValue="10"
            app:showSeekBarValue="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_small_folder_blur"
            android:summary="@string/mtk_warning"
            android:title="@string/small_folder_blur" />

        <SeekBarPreference
            android:defaultValue="58"
            android:dependency="prefs_key_small_folder_blur"
            android:key="prefs_key_small_folder_corner"
            android:title="@string/small_folder_blur_corner_radius"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="250"
            android:dependency="prefs_key_small_folder_blur"
            android:key="prefs_key_small_folder_side"
            android:title="@string/small_folder_blur_background_size"
            app:format="%d dp"
            app:maxValue="500"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="25"
            android:dependency="prefs_key_small_folder_blur"
            android:key="prefs_key_small_folder_drag"
            android:title="@string/small_folder_blur_drag_offset"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_big_folder_blur"
            android:summary="@string/mtk_warning"
            android:title="@string/big_folder_blur" />

        <SeekBarPreference
            android:defaultValue="58"
            android:dependency="prefs_key_big_folder_blur"
            android:key="prefs_key_big_folder_corner"
            android:title="@string/big_folder_blur_corner_radius"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="660"
            android:dependency="prefs_key_big_folder_blur"
            android:key="prefs_key_big_folder_height"
            android:title="@string/big_folder_blur_background_height"
            app:format="%d dp"
            app:maxValue="900"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="585"
            android:dependency="prefs_key_big_folder_blur"
            android:key="prefs_key_big_folder_width"
            android:title="@string/big_folder_blur_background_width"
            app:format="%d dp"
            app:maxValue="900"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="27"
            android:dependency="prefs_key_big_folder_blur"
            android:key="prefs_key_big_folder_drag"
            android:title="@string/big_folder_blur_drag_offset"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_close_folder"
            android:summary="@string/close_folder_summary"
            android:title="@string/close_folder" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="prefs_key_home_folder_blur"
            android:title="@string/blurred_background_when_opening_folder_view" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_folder_width"
            android:title="@string/using_full_width_of_folder_view" />

        <SeekBarPreference
            android:defaultValue="3"
            android:key="prefs_key_home_folder_columns"
            android:title="@string/number_of_icons_in_folder_iew"
            app:format="@string/home_folder_columns"
            app:maxValue="6"
            app:minValue="1"
            app:showSeekBarValue="true" />

    </PreferenceCategory>
</PreferenceScreen>